{
  "name": "wooder",
  "version": "1.0.0",
  "private": true,
  "description": "Проект для портфолио Wooder",
  "devDependencies": {
    "autoprefixer": "8.6.x",
    "browser-sync": "2.24.x",
    "del": "3.0.0",
    "gulp": "3.9.x",
    "gulp-csso": "3.0.1",
    "gulp-imagemin": "4.1.0",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "7.0.x",
    "gulp-posthtml": "3.0.4",
    "gulp-rename": "1.3.0",
    "gulp-sass": "4.0.x",
    "gulp-webp": "3.0.0",
    "posthtml-include": "1.2.0",
    "run-sequence": "2.2.1",
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "9.3.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "gulp serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.11"
  },
  "dependencies": {
    "svgxuse": "^1.2.6"
  }
}
